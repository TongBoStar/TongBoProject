	public void setHisCheckQuery(HisCheckQuery hisCheckQuery) {
		this.hisCheckQuery = hisCheckQuery;
	}

	public void setHisCheckId(java.lang.Long hisCheckId) {
		this.hisCheckId = hisCheckId;
	}
	
	
	public java.lang.Long getHisCheckId() {
		return this.hisCheckId;
	}

	/**
	 * 获得分页器
	 *
	 * @return the page
	 */
	public Page<HisCheck> getPage() {
		return page;
	}

	/**
	 * 设置分页器
	 *
	 * @param page the new page
	 */
	public void setPage(Page<HisCheck> page) {
		this.page = page;
	}
	
	/**
