	/* (non-Javadoc)
	 * @see com.disney.dol.base.CrudActionSupport#list()
	 */
	@Override
	public String list() throws Exception {
		if (!page.isOrderBySetted()) {
			page.setOrderBy("trainRecordId");
			page.setOrder(Page.DESC);
		}
		if(trainRecordQuery == null) {
			trainRecordQuery = new TrainRecordQuery();
		}
		
		try {
			page = trainRecordService.findPage(page, trainRecordQuery);
			
			resultInfo[0] = "0";
