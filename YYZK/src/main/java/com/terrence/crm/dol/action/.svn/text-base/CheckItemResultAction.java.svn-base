	public String list() throws Exception {
		if (!page.isOrderBySetted()) {
			page.setOrderBy("checkItemResultId");
			page.setOrder(Page.DESC);
		}
		if(checkItemResultQuery == null) {
			checkItemResultQuery = new CheckItemResultQuery();
		}
		
		try {
			page = checkItemResultService.findPage(page, checkItemResultQuery);
			
