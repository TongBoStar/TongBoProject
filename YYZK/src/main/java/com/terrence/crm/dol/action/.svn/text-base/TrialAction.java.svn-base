@Results( { @Result(name = CrudActionSupport.RELOAD, location = "trial." + CrudActionSupport.ACTIONSUFFIX + "?page.pageRequest=${page.pageRequest}", type = "redirect")})
public class TrialAction extends CrudActionSupport<Trial>  implements ApplicationContextAware{
	
	
	@Autowired
	@Qualifier("trialService")
	private ITrialService trialService;
	
	
	private Trial entity;

	private TrialQuery trialQuery;
	
	
	private java.lang.Long trialId;
	
	/** 分页器 */
	private Page<Trial> page = new Page<Trial>();
	
	/** Json操作信息 */
	private String[] resultInfo = new String[2];
	
	/** 所选择的编号列表 */
