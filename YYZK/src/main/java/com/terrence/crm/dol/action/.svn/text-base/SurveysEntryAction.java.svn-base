public class SurveysEntryAction extends CrudActionSupport<SurveysEntry>  implements ApplicationContextAware{
	
	
	@Autowired
	@Qualifier("surveysEntryService")
	private ISurveysEntryService surveysEntryService;
	
	
	private SurveysEntry entity;

	private SurveysEntryQuery surveysEntryQuery;
	
	
	private java.lang.Long surveysEntryId;
	
	/** 分页器 */
	private Page<SurveysEntry> page = new Page<SurveysEntry>();
	
	/** Json操作信息 */
	private String[] resultInfo = new String[2];
	
	/** 所选择的编号列表 */
	private List<java.lang.Long> checkedIdList;
	
	
	private ApplicationContext ctx;
	
	private List<SurveysEntry> surveysEntryList;
	private String amounts;
	private Long surveysId;
	/* (non-Javadoc)
	 * @see com.disney.dol.base.CrudActionSupport#prepareModel()
	 */
	@Override
	protected void prepareModel() throws Exception {
		if (surveysEntryId != null ) {
			entity = surveysEntryService.getById(surveysEntryId);
		} else {
			entity = new SurveysEntry();
		}
	}
	
	/* (non-Javadoc)
	 * @see com.disney.dol.base.CrudActionSupport#delete()
	 */
	@Override
	public String delete() throws Exception {
		
		try {
			surveysEntryService.deleteByMultipleId(checkedIdList);
			
			resultInfo[0] = "0";
			resultInfo[1] = "删除成功";
			
			addActionMessage("删除成功");
		} catch(ServiceException e) {
			logger.error(e.getMessage());
			
			resultInfo[0] = "-1";
			resultInfo[1] = e.getMessage();
		} catch(Exception e) {
			logger.error(e.getMessage());
			
			resultInfo[0] = "-1";
			resultInfo[1] = "删除失败";
			
			addActionMessage("删除失败");
		}
		return RELOAD;
	}
	
	/* (non-Javadoc)
	 * @see com.disney.dol.base.CrudActionSupport#deleteToJson()
	 */
	public String deleteToJson() throws Exception {
		
		try {
			delete();
			
		} catch(Exception e) {
			logger.error(e.getMessage());
			
			resultInfo[0] = "-1";
			resultInfo[1] = "删除失败";
		}
		return JSON;
	}

	/* (non-Javadoc)
	 * @see com.disney.dol.base.CrudActionSupport#input()
	 */
	@Override
	public String input() throws Exception {
		return INPUT;
	}
	
	public String listToQuery()throws Exception
	{
		if(surveysEntryQuery == null) {
			surveysEntryQuery = new SurveysEntryQuery();
		}
		
		try {
			surveysEntryList = surveysEntryService.findList(surveysEntryQuery);
			
			resultInfo[0] = "0";
			resultInfo[1] = "查询列表成功";
		} catch(ServiceException e) {
			logger.error(e.getMessage());
			
