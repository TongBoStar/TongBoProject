@Results( { @Result(name = CrudActionSupport.RELOAD, location = "salestype." + CrudActionSupport.ACTIONSUFFIX + "?page.pageRequest=${page.pageRequest}", type = "redirect")})
public class SalestypeAction extends CrudActionSupport<Salestype>  implements ApplicationContextAware{
	
	
	@Autowired
	@Qualifier("salestypeService")
	private ISalestypeService salestypeService;
	
	
	private Salestype entity;

	private SalestypeQuery salestypeQuery;
	
	
	private java.lang.Long salestypeId;
	
	/** 分页器 */
