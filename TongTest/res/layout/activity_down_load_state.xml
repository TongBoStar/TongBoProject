<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        >
        <TextView 
	       	android:layout_width="450dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
        <Button
            android:id="@+id/itemlistbtn"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:background="@drawable/btnborder"
            android:textColor="#000000"
            android:text="剧集列表" />
        <TextView 
	       	android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
    	<Button
            android:id="@+id/cachelistbtn"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:background="@drawable/btnborder"
            android:textColor="#000000"
            android:text="缓存列表" />
    	<TextView 
	       	android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
    	<Button
            android:id="@+id/clearlistbtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/btnborder"
            android:textColor="#000000"
            android:visibility="gone"
            android:text="清空" />
    	<TextView 
    	    android:id="@+id/clearlisttxt"
	       	android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        />
    	<TextView 
	       	android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
      	<Button 
      	    android:id="@+id/downyoukuback"
			android:background="@drawable/reback"
	        android:layout_width="60dp"
	    	android:layout_height="60dp"
	        />  
    </LinearLayout>
    
    <ListView
        android:id="@+id/list1"
        android:padding="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>
	
</LinearLayout>